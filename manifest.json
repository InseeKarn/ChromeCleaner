{
  "manifest_version": 3,
  "name": "ChromeCleaner â€“ Organize Tabs Automatically",
  "version": "1.0",
  "description": "Automatically group your Chrome tabs by website. Save time, stay organized, and manage your tabs effortlessly!",
  "permissions": [
    "tabs",
    "tabGroups",
    "storage",
    "contextMenus"
  ],
  "action": {
    "default_popup": "extension/popup.html",
    "default_icon": {
      "16": "extension/icons/icon16.png",
      "48": "extension/icons/icon48.png",
      "128": "extension/icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "extension/background.js"
  },
  
  "icons": {
    "16": "extension/icons/icon16.png",
    "48": "extension/icons/icon48.png",
    "128": "extension/icons/icon128.png"
  }
}
